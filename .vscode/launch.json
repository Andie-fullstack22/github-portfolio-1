{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Portfolio in Browser",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/portfolio"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open Portfolio",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open Portfolio (Alternative Path)",
            "file": "${workspaceFolder}/portfolio/index.html",
            "webRoot": "${workspaceFolder}"
        }
    ]
} 