{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open Portfolio Directly",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "command": "cd ${workspaceFolder} && npx serve",
            "name": "Serve Portfolio (Static Server)",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}